package entidade;

public class Produto {
  public String Nome;
  public int quantidade;
  public double preco;
  
  public int ValorEmEstoque()
  {
	return quantidade;  
  }
  public void AdicionarProduto()
  {
    quantidade++;
  }
  public void RemoverProduto()
  {
	quantidade--;
  }
  public String toString()
  {
	  return this.Nome + " estoque " + this.quantidade + " pre√ßo total $" + String.format("%.2f", this.preco*this.quantidade); 
  }
}
